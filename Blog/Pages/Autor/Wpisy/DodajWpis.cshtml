@page
@model Blog.Pages.Autor.Wpisy.DodajWpisModel
@{
}
<div class="bg-light">
    <h1>Dodaj wpis</h1>
</div>

<div>
    <div class="container">
<form method="post">
    <div class="form-group">
        <label for="title" class="form-label">Tytuł</label>
        <input type="text" class="form-control" placeholder="Nowy tytuł..." id="tytuł" asp-for="DodajWpisRequest.Title">
        
    </div>
            <div class="form-group">
                <label for="wpis" class="form-label">Wpis</label>
                <textarea class="form-control" placeholder="Napisz co dziś myślisz..." id="wpis" asp-for="DodajWpisRequest.Text"></textarea>

            </div>
            <div class="form-group">
                <label for="dataWpisu" class="form-label">Data</label>
                <input type="date" class="form-control" id="dataWpisu" asp-for="DodajWpisRequest.Date" />

            </div>
            <div class="form-group">
                <label for="author" class="form-label">Autor</label>
                <input type="text" class="form-control" placeholder="M. X." id="autor" asp-for="DodajWpisRequest.Author">

            </div>
            <div class="mt-3">
            <button type="submit" class="btn btn-primary">Dodaj</button>
            </div>
</form>
</div>
</div>